@using BlazorApp.Models
@using Core
@using Core.Devices
@using Microsoft.AspNetCore.Components.Web

<div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close" @onclick="OnClose"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="Device" OnValidSubmit="OnValidSubmit">
                    <div class="mb-3">
                        <label class="form-label text-muted">Id: @Device.Id</label>
                    </div>
                    @if (!IsEditMode)
                    {
                        <div class="mb-3">
                            <label class="form-label">Тип устройства</label>
                            <InputSelect class="form-select" @bind-Value="Device.DeviceType">
                                @foreach (var type in Enum.GetValues(typeof(DeviceModel.Type)))
                                {
                                    @if ((DeviceModel.Type)type != DeviceModel.Type.Hub)
                                    {
                                        <option value="@type">@type</option>
                                    }
                                }
                            </InputSelect>
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label">Имя</label>
                        <InputText class="form-control" @bind-Value="Device.Name" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Батарея (0–1)</label>
                        <InputNumber class="form-control" @bind-Value="Device.Battery" min="0" max="1" step="0.01" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Тип питания</label>
                        <InputSelect class="form-select" @bind-Value="Device.DevicePowerType">
                            @foreach (var powerType in Enum.GetValues(typeof(Device.PowerType)))
                            {
                                <option value="@powerType">@powerType</option>
                            }
                        </InputSelect>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Радиус видимости</label>
                        <InputNumber class="form-control" @bind-Value="Device.Radius" min="10" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Скорость разряда батареи (множитель)</label>
                        <InputNumber class="form-control" @bind-Value="Device.BatteryDrainRate" min="0" step="0.1" />
                        <div class="form-text">1.0 = нормальная скорость, 2.0 = вдвое быстрее</div>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">Сохранить</button>
                        <button type="button" class="btn btn-secondary" @onclick="OnClose">Отмена</button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public DeviceModel Device { get; set; } = default!;
    [Parameter] public bool IsEditMode { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }

    private string Title => IsEditMode ? "Изменить устройство" : "Добавить устройство";
}